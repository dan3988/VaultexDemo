@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table border table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Organisation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Organisation!.OrganisationName</td>
            </tr>
        }
    </tbody>
</table>
